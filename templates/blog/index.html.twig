{% extends 'base.html.twig' %}
{% block title %}
    Blog Index
{% endblock %}
{% block body %}
    {% for id, post in posts %}
        <p><a href="{{ path('blog_show', {'id': id}) }}">ID {{ id }}</a></p>
        <h3>{{ post.title|upper }}</h3>
        <p>{{ post.body }}</p>
        <p>{{ 899|price }}</p>
        <p>{{ post.date|date('d-m-Y') }}</p>
    {% endfor %}
{% endblock %}